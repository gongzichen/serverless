.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.item_box{
  display:  flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rp;
}
.item_box .img_box{
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
}
.item_box .img_box image{
  width: 100%;
  height: 100%;
}
.item_box .content_box{
  flex: 1;
  padding-left: 20rpx
}
.item_box .content_box input{
  border:1rpx solid #eee;
